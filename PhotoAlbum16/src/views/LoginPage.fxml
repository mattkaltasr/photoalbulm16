            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="user_tb" promptText="Username" GridPane.rowIndex="1" />
            <PasswordField fx:id="pass_tb" promptText="Password" GridPane.rowIndex="2" />
